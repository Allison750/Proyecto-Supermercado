		lblRegistroDeUn.setBounds(143, 28, 239, 51);
		contentPane.add(lblRegistroDeUn);
		
		lblIngreseUnNombre = new JLabel("Ingrese un nombre de usuario:");
		lblIngreseUnNombre.setForeground(new Color(0, 0, 0));
